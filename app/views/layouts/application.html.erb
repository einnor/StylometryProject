<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  
  <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    
    
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <%= render 'layouts/common/header' %>
  
  <div class="skin-blue">
    
    <div class="wrapper row-offcanvas row-offcanvas-left">
      <div class="row">
        <div class="col-md-3 skin-white">
          <%= render 'layouts/common/rightsidebar'%>
          
        </div>
        
        <div class="col-md-6 skin-white">
          <% if notice %>
            <p class="alert alert-success"><%= notice %></p>
          <% end %>
          <% if alert %>
            <p class="alert alert-danger"><%= alert %></p>
          <% end %>
          
          
          <% if admin_signed_in? %>
            Logged in as <strong><%= current_admin.email %></strong>.
            <%= link_to 'Edit profile', edit_admin_registration_path, :class => 'navbar-link' %> |
            <%= link_to "Logout", destroy_admin_session_path, method: :delete, :class => 'navbar-link'  %>
          <% else %>
            <%= link_to "Login", new_admin_session_path, :class => 'navbar-link'  %>
          <% end %>
          
          <br />
        
          <%= yield %>
        </div>
        
        <div class="col-md-3 skin-white">
          <%= render 'layouts/common/leftsidebar'%>
          
        </div>
      </div>
    </div>
    
  </div>
  
  

  
  <%= render 'layouts/common/footer' %>
  
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
